-rw-r--r--   1 juser juser 3452644219 2009-01-15 18:40 genes.tar.gz
-rw-r--r--   1 juser juser     692505 2009-01-15 14:52 genome
-rw-r--r--   1 juser juser       9782 2009-01-19 12:49 keggHierarchy
drwxr-xr-x 936 juser juser      20480 2009-01-19 16:42 kgml
-rw-r--r--   1 juser juser  215582612 2009-01-15 14:58 kgml.tar.gz
-rw-r--r--   1 juser juser   37496374 2009-01-15 14:54 ko
